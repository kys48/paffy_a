<h1>Listing wishes</h1>

<table>
  <tr>
    <th>Item type</th>
    <th>Ref</th>
    <th>User</th>
    <th>Subject</th>
    <th>Contents</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wishes.each do |wish| %>
  <tr>
    <td><%= wish.item_type %></td>
    <td><%= wish.ref_id %></td>
    <td><%= wish.user_id %></td>
    <td><%= wish.subject %></td>
    <td><%= wish.contents %></td>
    <td><%= link_to 'Show', wish %></td>
    <td><%= link_to 'Edit', edit_wish_path(wish) %></td>
    <td><%= link_to 'Destroy', wish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

