<h1>사용자목록</h1>
<% if notice %>
	<p id="notice"><%= notice%></p>
<% end %>

<table class="table table-striped table-hover">

  <thead>
    <tr>
      <th>id</th>
      <th>프로필ID</th>
      <th>이름</th>
      <th>url</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user %></td>
        <td><%= link_to user.profile_id, user %></td>
        <td><%= user.user_name %></td>
        <td><%= user.url %></td>
        <td><%= user.email %></td>
        <td><%= link_to '보기', user %></td>
        <td><%= link_to '수정', edit_user_path(user) %></td>
        <td><%= link_to '삭제', user, method: :delete, data: { confirm: '정말 삭제할까요?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>
<%= link_to '회원등록', new_user_path, class: "btn btn-lg btn-primary" %>