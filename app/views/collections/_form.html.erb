<%= form_for @collection, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
    <% if current_user %>
    	<%= f.text_field :user_id, :class => 'text_field', :value => current_user.id %>
    <% else %>
    	<%= f.hidden_field :user_id, :class => 'text_field' %>
    <% end %>
      
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contents, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :contents, :class => 'text_area' %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit "수정", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                collections_path, :class => 'btn' %>
  </div>
<% end %>
