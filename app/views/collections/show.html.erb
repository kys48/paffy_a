function goUrl(url){
	var openurl = url;
	$.ajax({
	    url     : '/getLinkpriceUrl?url='+encodeURIComponent(url),
	    type    : 'get',
	    dataType: 'json',
	    success : function(json){
			if (json.status){
				var result = json.result;
				var lp_url = json.url;
				if (result=='S') openurl = lp_url;
			}
			if(CHKMOBILE=='Y'){
				document.location.href = openurl;
			} else {
				window.open(openurl);
			}
			
	    },
