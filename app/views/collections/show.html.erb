							}
						}
		
			    	} else {
			    		searchYn = false;
			    		notify('error', json.msg);
			    	}
			    	
			    },
			    error   : function(e){
			        searchYn = false;
			        semafors['ajax'] = false;
			        //notify('error', TranslationLabels['could_not_complete_request']);
			    }
			});
		}, 10 );
	}	// if(searchYn){
		
