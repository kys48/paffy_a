function linkprice(){
	var url = document.getElementById("url").value;

	$.ajax({
	    url     : '/getLinkpriceUrl?url='+encodeURIComponent(url),
	    type    : 'get',
	    dataType: 'json',
	    success : function(json){
			$('#result').html(json.result);
			$('#lpurl').val(json.url);
	    },
	    error   : function(e){
	        //notify('error', TranslationLabels['could_not_complete_request']);
	    }
	});
}


function getlookie(){
