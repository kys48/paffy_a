<%- model_class = BoardContent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:subject) %></th>
      <th><%= model_class.human_attribute_name(:contents) %></th>
      <th><%= model_class.human_attribute_name(:hit_no) %></th>
      <th><%= model_class.human_attribute_name(:reg_id) %></th>
      <th><%= model_class.human_attribute_name(:reg_name) %></th>
      <th><%= model_class.human_attribute_name(:reg_passwd) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @board_contents.each do |board_content| %>
      <tr>
        <td><%= link_to board_content.id, board_content_path(board_content) %></td>
        <td><%= board_content.subject %></td>
        <td><%= board_content.contents %></td>
        <td><%= board_content.hit_no %></td>
        <td><%= board_content.reg_id %></td>
        <td><%= board_content.reg_name %></td>
        <td><%= board_content.reg_passwd %></td>
        <td><%= board_content.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_board_content_path(board_content), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      board_content_path(board_content),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_board_content_path,
            :class => 'btn btn-primary' %>
