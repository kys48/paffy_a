<h1>Listing messages</h1>

<table>
  <tr>
    <th>User</th>
    <th>Msg type</th>
    <th>Ref user</th>
    <th>Ref</th>
    <th>Ref url</th>
    <th>Read yn</th>
    <th>Contents</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.user_id %></td>
    <td><%= message.msg_type %></td>
    <td><%= message.ref_user_id %></td>
    <td><%= message.ref_id %></td>
    <td><%= message.ref_url %></td>
    <td><%= message.read_yn %></td>
    <td><%= message.contents %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

