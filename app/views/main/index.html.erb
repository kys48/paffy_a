}

// 카테고리 검색
function searchCate(stat){
	init();
	$("#smenu0_title").html("Category ("+$("#smenu0_sub_"+stat+" a").html()+")");
	$("#cate_code").val(stat);
	$(".smenu0_sub").removeClass("active");
